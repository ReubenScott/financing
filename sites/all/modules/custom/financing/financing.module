      'arguments' => array('form' => NULL),
  ),
    'financing_list' => array(
      'template' => 'template/financing_list',
      'arguments' => array('form' => NULL),
  ),
    'financing_view' => array(
      'template' => 'template/financing_view',
      'arguments' => array('form' => NULL),
  ),
  );
}

