<?php

/**
* Implementation of hook_perm().
*/
function financing_perm() {
   return array('view','add','edit', 'delete');
}


/**
 * Implement hook_menu
 */
function financing_menu() {
  $items = array();

  $items['financing'] = array(
    'title' => 'financing',
    'page callback' => 'financing_list',
    'access arguments' => array('view'),
    'type' => MENU_NORMAL_ITEM,
  );
  $items ['financing/add'] = array(
    'page callback' => 'drupal_get_form',
    'page arguments' => array('financing_form'),
    'access callback' => 'user_access',
    'access arguments' => array('add'),
    'type' => MENU_CALLBACK
  );
  $items ['financing/persist'] = array(
    'page callback' => 'financing_persist',
    'access arguments' => array('add'),
//    'access arguments' => array('access content'),
    'type' => MENU_CALLBACK
  );
  $items ['financing/view/%'] = array(
    'page callback' => 'financing_view',
    'access arguments' => array('view'),
//    'access arguments' => array('access content'),
    'type' => MENU_CALLBACK
  );
  $items ['financing/edit/%'] = array(
    'page callback' => 'drupal_get_form',
    'page arguments' => array('financing_form'),
    'access arguments' => array('edit'),
//    'access arguments' => array('access content'),
    'type' => MENU_CALLBACK
  );

  return $items;
}





/**
 * Implements hook_theme()
